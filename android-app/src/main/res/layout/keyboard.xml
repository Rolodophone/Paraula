<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    android:theme="@style/LearningTheme">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/button1"
            style="@style/KeyboardButton"
            android:text="q" />

        <Button
            android:id="@+id/button2"
            style="@style/KeyboardButton"
            android:text="w" />

        <Button
            android:id="@+id/button3"
            style="@style/KeyboardButton"
            android:text="e" />

        <Button
            android:id="@+id/button4"
            style="@style/KeyboardButton"
            android:text="r" />

        <Button
            android:id="@+id/button5"
            style="@style/KeyboardButton"
            android:text="t" />

        <Button
            android:id="@+id/button6"
            style="@style/KeyboardButton"
            android:text="y" />

        <Button
            android:id="@+id/button7"
            style="@style/KeyboardButton"
            android:text="u" />

        <Button
            android:id="@+id/button8"
            style="@style/KeyboardButton"
            android:text="i" />

        <Button
            android:id="@+id/button9"
            style="@style/KeyboardButton"
            android:text="o" />

        <Button
            android:id="@+id/button10"
            style="@style/KeyboardButton"
            android:insetTop="0dp"
            android:text="p" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/button11"
            style="@style/KeyboardButton"
            android:text="a" />

        <Button
            android:id="@+id/button12"
            style="@style/KeyboardButton"
            android:text="s" />

        <Button
            android:id="@+id/button13"
            style="@style/KeyboardButton"
            android:text="d" />

        <Button
            android:id="@+id/button14"
            style="@style/KeyboardButton"
            android:text="f" />

        <Button
            android:id="@+id/button15"
            style="@style/KeyboardButton"
            android:text="g" />

        <Button
            android:id="@+id/button16"
            style="@style/KeyboardButton"
            android:text="h" />

        <Button
            android:id="@+id/button17"
            style="@style/KeyboardButton"
            android:text="j" />

        <Button
            android:id="@+id/button18"
            style="@style/KeyboardButton"
            android:text="k" />

        <Button
            android:id="@+id/button19"
            style="@style/KeyboardButton"
            android:text="l" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shift_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardForegroundColor="@android:color/transparent"
            app:strokeColor="@android:color/white"
            app:strokeWidth="1dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_keyboard_shift"
                android:contentDescription="backspace" />

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/button21"
            style="@style/KeyboardButton"
            android:text="z" />

        <Button
            android:id="@+id/button22"
            style="@style/KeyboardButton"
            android:text="x" />

        <Button
            android:id="@+id/button23"
            style="@style/KeyboardButton"
            android:text="c" />

        <Button
            android:id="@+id/button24"
            style="@style/KeyboardButton"
            android:text="v" />

        <Button
            android:id="@+id/button25"
            style="@style/KeyboardButton"
            android:text="b" />

        <Button
            android:id="@+id/button26"
            style="@style/KeyboardButton"
            android:text="n" />

        <Button
            android:id="@+id/button27"
            style="@style/KeyboardButton"
            android:text="m" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardForegroundColor="@android:color/transparent"
            app:strokeColor="@android:color/white"
            app:strokeWidth="1dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_outline_backspace_24"
                android:contentDescription="backspace" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <Button
            android:id="@+id/space"
            style="@style/KeyboardButton"
            android:layout_weight="6"
            android:text=" " />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

    </LinearLayout>

</LinearLayout>